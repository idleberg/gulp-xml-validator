{
	"name": "gulp-xml-validator",
	"version": "4.0.0",
	"description": "Gulp plugin to validate XML",
	"author": "Jan T. Sott",
	"license": "MIT",
	"type": "module",
	"exports": {
		"types": {
			"import": "./dist/index.d.mts",
			"require": "./dist/index.d.cts"
		},
		"import": "./dist/index.mjs",
		"require": "./dist/index.cjs"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/gulp-xml-validator.git"
	},
	"keywords": [
		"gulp",
		"gulpplugin",
		"gulp-plugin",
		"linter",
		"validator",
		"xml",
		"xmldom"
	],
	"files": [
		"dist/",
		"LICENSE",
		"package.json",
		"README.md"
	],
	"engines": {
		"gulp": ">=2.3.0",
		"node": ">=20"
	},
	"dependencies": {
		"@xmldom/xmldom": "^0.9.0",
		"kleur": "^4.1.5",
		"plugin-error": "^2.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@e18e/cli": "^0.3.1",
		"@idleberg/configs": "^0.3.3",
		"@types/gulp": "^4.0.18",
		"@types/node": "^24.10.0",
		"@types/vinyl": "^2.0.12",
		"@vitest/coverage-v8": "^4.0.8",
		"concurrently": "^9.2.1",
		"gulp": "^5.0.1",
		"np": "^10.2.0",
		"prettier": "^3.6.2",
		"tsdown": "^0.16.1",
		"tsm": "^2.3.0",
		"typescript": "^5.9.3",
		"uvu": "^0.5.6",
		"vinyl": "^3.0.1",
		"vitest": "^4.0.8"
	},
	"peerDependencies": {
		"gulp": ">=4.0.2 || ^5"
	},
	"scripts": {
		"build": "tsdown",
		"dev": "npm run build -- --watch",
		"lint": "concurrently --prefix-colors blue,green,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:e18e": "e18e-cli analyze",
		"prepack": "npm run build",
		"prepare": "lefthook install",
		"publish:npm": "np --any-branch",
		"test": "concurrently --prefix-colors magenta,cyan npm:test:*",
		"test:unit": "vitest run",
		"test:e2e": "uvu -r tsm e2e"
	},
	"packageManager": "pnpm@10.26.0+sha512.3b3f6c725ebe712506c0ab1ad4133cf86b1f4b687effce62a9b38b4d72e3954242e643190fc51fa1642949c735f403debd44f5cb0edd657abe63a8b6a7e1e402"
